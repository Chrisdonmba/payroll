<body>
  <section class="hero-sign">
    <header class="d-flex justify-content-between align-items-center">
      <a href="/" class="h3 text-decoration-none">EasyPay</a>
    </header>

    <section class="glass bg-white shadow p-3 rounded">

      <header class="text-center">
        <h3>Login</h3>
        <p>Your login details here</p>
      </header>
      <form id="loginForm">

        <div>
          <input type="email" placeholder="Your Email" name="email" class="form-control">
          <div class="emailErr error"></div>
        </div>

        <div>
          <input type="password" name="password" placeholder="Your Password" class="form-control mt-3">
          <div class="pwdErr error"></div>
        </div>

        <button type="submit" class="btn w-100 btn-gradient mt-3 text-white rounded border-0"> Login</button>
        <!-- <span class="w-100 text-center d-flex justify-content-center mt-2">
                <a href="" class="">Forgot Password ?</a>
            </span> -->
      </form>
    </section>

  </section>


